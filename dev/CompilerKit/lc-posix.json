{
  "compiler_path": "g++",
  "compiler_std": "c++20",
  "headers_path": [
    "../CompilerKit",
    "../",
    "../CompilerKit/src/",
    "../CompilerKit/src/impl"
  ],
  "sources_path": [
    "src/*.cc",
    "src/*/*.cc"
  ],
  "output_name": "/usr/local/lib/libCompilerKit.so",
  "compiler_flags": [
    "-fPIC",
    "-shared"
  ],
  "cpp_macros": [
    "__LIBCOMPILER__=202505",
    "LC_USE_STRUCTS=1",
    "kDistReleaseBranch=$(git rev-parse --abbrev-ref HEAD)-$(uuidgen)"
  ]
}