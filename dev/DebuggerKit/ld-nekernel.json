{
  "compiler_path": "g++",
  "compiler_std": "c++20",
  "headers_path": [
    "../DebuggerKit",
    "../"
  ],
  "sources_path": ["src/*.cc"],
  "output_name": "/usr/local/lib/libDebuggerKit.dylib",
  "compiler_flags": ["-fPIC", "-shared"],
  "cpp_macros": [
    "__NECTI__=202505",
    "CK_USE_STRUCTS=1",
    "DK_NEKERNEL_DEBUGGER",
    "kDistReleaseBranch=$(git rev-parse --abbrev-ref HEAD)-$(uuidgen)"
  ]
}
